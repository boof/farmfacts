!!!
%html{ :xmlns => 'http://www.w3.org/1999/xhtml' }

  %head
    %title&= title
    = javascript_include_tag 'jquery-1.3.2', 'jquery/lazy-1.3', :cache => 'lazy-jquery'
    = javascript_include_tag 'farmfacts'

    = stylesheet_link_tag '/javascripts/jquery/ui/smoothness/theme.css'
    = javascript_include_tag '/javascripts/jquery/ui-1.7.2.js'

    :javascript
      FarmFacts.initialize();

  %body
    - if visitor.errors[:base]
      .error.prepend-top= visitor.errors[:base]

    #login{ :title => title }

      - form_for :visitor, visitor, :url => login_path do |f|
        = hidden_field_tag :return_uri, return_uri

        %div
          = f.label :username, 'Benutzer'
          = f.text_field :username
        %div
          = f.label :password, 'Passwort'
          = f.password_field :password

        = submit_tag t('actions.logins.create')